<div class="container">

<p id="notice"><%= notice %></p>

<h1>Sprints</h1>

<br>

<%= link_to 'New Sprint', new_sprint_path %>

<table class="table">
  <thead>
    <tr>
      <th>Options</th>
      <th>Sprint Name</th>
      <th>Start date</th>
      <th>End date</th>
    </tr>
  </thead>

  <tbody>
    <% @sprints.each do |sprint| %>
      <tr>
        <td><%= link_to (fa_icon "pencil-square"), edit_sprint_path(sprint) %> | <%= link_to (fa_icon "trash"), sprint, method: :delete, data: { confirm: 'Are you sure you want to delete this Sprint?' } %></td>
        <td><%= sprint.name %></td>
        <td><%= sprint.start_date.strftime("%b %d, %Y") %></td>
        <td><%= sprint.end_date.strftime("%b %d, %Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
