<div class="page-content">
  <div id="portlet-config" class="modal hide">
    <div class="modal-header">
      <button data-dismiss="modal" class="close" type="button"></button>
      <h3>Widget Settings</h3>
    </div>
    <div class="modal-body"> Widget settings form goes here </div>
  </div>
  <div class="clearfix"></div>
  <div class="content">
  <p id="notice"><%= notice %></p>
    <div class="page-title">
      <h1>Memes</h1>
    </div>

    <div class="text-center">
      <%= link_to 'New Meme', new_meme_path, class: "btn btn-outline-primary" %>
    </div>

    </br>

    <div class="row-fluid">
      <div class="span12">
        <div class="grid simple ">
          <div class="grid-title">
            <h4>Memes <span class="semi-bold">List</span></h4>
            <div class="tools">
              <a href="javascript:;" class="collapse"></a>
              <a href="#grid-config" data-toggle="modal" class="config"></a>
              <a href="javascript:;" class="reload"></a>
              <a href="javascript:;" class="remove"></a>
            </div>
          </div>
          <div class="grid-body ">
            <table class="table table-hover table-condensed" id="example">
              <thead>
                <tr>
                  <th>Options</th>
                  <th>Meme</th>
                  <th>Date to Show Meme</th>
                </tr>
              </thead>
              <tbody>
                <% @memes.each do |meme| %>
                <tr class="even gradeC">
                  <td><%= link_to (fa_icon "eye"), meme %> | <%= link_to (fa_icon "pencil-square"), edit_meme_path(meme) %> | <%= link_to (fa_icon "trash"), meme, method: :delete, data: { confirm: 'Are you sure you want to delete this meme?' } %></td>
                  <td><%= image_tag meme.image.url(:medium) %></td>
                  <td class="center"><%= meme.view_date.strftime("%m-%d-%Y") %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
