<p id="notice"><%= notice %></p>

<div class="container">

<h1>Memes</h1>

<%= link_to 'New Meme', new_meme_path %>

</br>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
      <th>Meme</th>
      <th>Date to Show Meme</th>
    </tr>
  </thead>

  <tbody>
    <% @memes.each do |meme| %>
      <tr>
        <td><%= link_to 'Show', meme %></td>
        <td><%= link_to 'Edit', edit_meme_path(meme) %></td>
        <td><%= link_to 'Destroy', meme, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= image_tag meme.image.url(:medium) %></td>
        <td><%= meme.view_date.strftime("%m-%d-%Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</br>

</div>
