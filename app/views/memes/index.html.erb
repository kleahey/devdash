<div class="page-content">
  <div class="content">
  <p id="notice"><%= notice %></p>
    <div class="page-title">
      <h1>Memes</h1>
    </div>

    <div class="text-center">
      <%= link_to 'New Meme', new_meme_path, class: "btn btn-outline-primary" %>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th>Options</th>
          <th>Meme</th>
          <th>Date to Show Meme</th>
        </tr>
      </thead>

      <tbody>
        <% @memes.each do |meme| %>
        <tr>
          <td><%= link_to (fa_icon "eye"), meme %> | <%= link_to (fa_icon "pencil-square"), edit_meme_path(meme) %> | <%= link_to (fa_icon "trash"), meme, method: :delete, data: { confirm: 'Are you sure you want to delete this meme?' } %></td>
          <td><%= image_tag meme.image.url(:medium) %></td>
          <td><%= meme.view_date.strftime("%m-%d-%Y") %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
